<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.boardmateconnect.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.boardmateconnect.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_roleSelectFragment"
            app:destination="@id/roleSelectFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/codeFragment"
        android:name="com.example.boardmateconnect.CodeFragment"
        android:label="fragment_code"
        tools:layout="@layout/fragment_code" />
    <fragment
        android:id="@+id/roleSelectFragment"
        android:name="com.example.boardmateconnect.RoleSelectFragment"
        android:label="fragment_role_select"
        tools:layout="@layout/fragment_role_select" >
        <action
            android:id="@+id/action_roleSelectFragment_to_codeFragment"
            app:destination="@id/codeFragment" />
        <action
            android:id="@+id/action_roleSelectFragment_to_createConnectFragment"
            app:destination="@id/createConnectFragment" />
    </fragment>
    <fragment
        android:id="@+id/createConnectFragment"
        android:name="com.example.boardmateconnect.CreateConnectFragment"
        android:label="fragment_create_connect"
        tools:layout="@layout/fragment_create_connect" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.boardmateconnect.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.boardmateconnect.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
</navigation>